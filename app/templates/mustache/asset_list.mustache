{% raw %}
<script id="asset-list-box-tpl" type="text/template">
    {{#rows}}
      <div class="col-xs-2 item" id="asset-{{ _id }}">
        <div class="thumbnail">
          <img src="{{ thumb_url }}" alt="{{ name }}">
          <div class="caption">
            <!--<h3>{{ name }}</h3>-->
            <p>{{ name }}</p>
            <p>
              {{#is_cover}}
              <a href="javascript:void(0);" class="set-cover active" title="封面"><span class="glyphicon glyphicon-flag" aria-hidden="true"></span></a>
              {{/is_cover}}
              {{^is_cover}}
              <a href="javascript:void(0);" class="set-cover" data-id="{{ _id }}" title="设为封面"><span class="glyphicon glyphicon-flag" aria-hidden="true"></span></a>
              {{/is_cover}}
              <a href="javascript:void(0);" class="del-asset" data-id="{{ _id }}" title="删除"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </p>
          </div>
        </div>
      </div>
    {{/rows}}
</script>
{% endraw %}
